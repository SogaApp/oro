{% extends 'base.html.twig' %}

{% block bodyAtt %}class="fixed-left"{% endblock %}

{% block content %}

    <div class="placeholder" style="margin-top: 50px">&nbsp;</div>
    <div class="row">
        <div class="col-sm-12">
            <div class="card-box" style="margin-top: 50px">

                <h4 class="page-title" style="padding-right: 10px;"><i class="glyphicon glyphicon-time"></i>
                    Registro Histórico de Tareas
                </h4>
                <span class="">&nbsp;</span>
                <a href="{{ path('registrarTarea') }}">
                    <button class="btn btn-success btn-bordered waves-effect waves-light"
                            style="float: right;"><span class="mdi mdi-plus"></span> Nueva
                    </button>
                </a>
                <hr>
                <div class="clearfix"></div>


                <div class="row">
                    <div class="col-md-12">
                        <div class="card-box">
                            <div class="page-title-box">
                                <h4 class="header-title m-t-0 m-b-30"><i
                                            class="glyphicon glyphicon-time"></i>
                                    Histórico de Tareas</h4>
                                <table id="tarea-table" class="table table table-hover m-0">

                                    <thead>
                                    <tr>
                                        <th>Registra</th>
                                        <th>Fecha</th>
                                        <th>Tipo</th>
                                        <th>Fecha asignación</th>
                                        <th>Asignado</th>
                                        <th>Fecha solución</th>
                                        <th>Fecha verificación</th>
                                        <th>Descripción</th>
                                        <th>Comentario</th>

                                    </tr>
                                    </thead>
                                    <tbody>

                                    {% for tarea in tareas %}

                                        <tr>
                                            <td>
                                                {{ tarea.codigoUsuarioRegistraFk }}
                                            </td>
                                            <td>
                                                {% if tarea.fechaRegistro != null %}
                                                    {{ tarea.fechaRegistro|date('y-m-d') }}
                                                {% endif %}
                                            </td>
                                            <td>
                                                {% if tarea.tareaTipoRel != null %}
                                                    <span class="label label-default">{{ tarea.tareaTipoRel.codigoTareaTipoPk }}</span>
                                                {% endif %}
                                            </td>
                                            <td>
                                                {% if tarea.fechaGestion != null %}
                                                    {{ tarea.fechaGestion|date('y-m-d') }}
                                                {% endif %}
                                            </td>
                                            <td>
                                                {{ tarea.codigoUsuarioAsignaFk }}
                                            </td>
                                            <td>
                                                {% if tarea.fechaSolucion != null %}
                                                    {{ tarea.fechaSolucion|date('y-m-d') }}
                                                {% endif %}
                                            </td>
                                            <td>
                                                {% if tarea.fechaVerificado != null %}
                                                    {{ tarea.fechaVerificado|date('y-m-d') }}
                                                {% endif %}
                                            </td>
                                            <td>
                                                {{ tarea.descripcion }}
                                            </td>
                                            <td>
                                                {{ tarea.comentario }}
                                            </td>


                                        </tr>
                                    {% endfor %}

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div> <!-- table-responsive -->
                </div> <!-- end card -->

                <!-- end col -->


                <div class="btn-group" style="float: left">

                    <div class="btn btn-default ">Registros <span
                                class="badge">{{ tareas.getTotalItemCount }}</span></div>
                    <div class="btn-group"
                         style="float: left;margin: 0px;padding-top: 0px">{{ knp_pagination_render(tareas) }}</div>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
{% endblock content %}