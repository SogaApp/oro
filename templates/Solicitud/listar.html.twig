{% extends 'base.html.twig' %}
{% block body %}
    <div id="wrapper">
        {{ include('bloquesGenerales/menuEncabezado.html.twig') }}
        {{ include('bloquesGenerales/menuIzquierdo.html.twig') }}
        <div class="content-page">
            <!-- Start content -->
            <div class="content">
                <div class="container">
                    {% block content %}
                        <div class="row">
                            <div class="col-xs-12">
                                <div class="page-title-box">
                                    <h4 class="page-title" style="padding-right: 10px;"><i
                                                class="glyphicon glyphicon-th-list"></i> Solicitudes </h4>
                                    <span class="label label-danger">Sin asignar: {{ sinAtender }}</span>
                                    <span class="label label-danger">Sin terminar: {{ sinCerrar }}</span>
                                    <div class="clearfix"></div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6 col-md-6"></div>
                            <div class="col-6 col-md-6">
                                {{ form_start(formFiltro) }}
                                {{ form_widget(formFiltro.estado) }}
                                <div class="col-12 col-md-12" id="submit-filtro"
                                     style="text-align: right;padding: 10px;">
                                    {{ form_widget(formFiltro.BtnFiltrar) }}
                                </div>
                                {{ form_end(formFiltro) }}

                            </div>
                        </div>
                        {{ form_start(form) }}
                        <div class="row">
                            <div class="col-md-12">
                                <div class="card-box">
                                    <div class="table-responsive">
                                        <table id="tarea-table" class="table table table-hover m-0 table-oro">
                                            <thead>
                                            <tr>
                                                <th>Código</th>
                                                <th>Registra</th>
                                                <th>Tipo</th>
                                                <th>Fecha solicitud</th>
                                                <th>Fecha atendido</th>
                                                <th>Descripción</th>
                                                <th title="Atender">At</th>
                                            </tr>
                                            </thead>
                                            <tbody>
                                            {% for arSolicitud in arSolicitudes %}
                                                <tr>
                                                    <td>{{ arSolicitud.codigoarSolicitudPk }}</td>
                                                    <td>{{ arSolicitud.codigoUsuarioRegistraFk }}</td>
                                                    <td>
                                                        <span class="label label-default">{{ arSolicitud.arSolicitudTipoRel.codigoarSolicitudTipoPk }}</span>
                                                    </td>
                                                    <td>{% if arSolicitud.fechaSolicitud != null %}
                                                            {{ arSolicitud.fechaSolicitud|date('y-m-d') }}
                                                        {% endif %}
                                                    </td>
                                                    <td>
                                                        {% if arSolicitud.fechaAtendido != null %}
                                                            {{ arSolicitud.fechaAtendido|date('y-m-d') }}
                                                        {% endif %}
                                                    </td>
                                                    <td>{{ arSolicitud.descripcion }}</td>
                                                    <td>
                                                        {% if arSolicitud.estadoAtendido == false %}
                                                            <button class="btn btn-danger btn-xs" type="submit"
                                                                    name="arSolicitudAtender"
                                                                    value="{{ arSolicitud.codigoSolicitudPk }}"
                                                                    {% if arSolicitud.codigoUsuarioAsignaFk == null %}disabled{% endif %}>
                                                                <i class="glyphicon glyphicon-thumbs-down"></i>
                                                            </button>
                                                        {% else %}
                                                            <button class="btn btn-success btn-xs" type="submit"
                                                                    name="arSolicitudAtender" disabled>
                                                                <i class="glyphicon glyphicon-thumbs-up"></i>
                                                            </button>
                                                        {% endif %}
                                                    </td>
                                                </tr>
                                            {% endfor %}

                                            </tbody>
                                        </table>
                                    </div> <!-- table-responsive -->
                                </div> <!-- end card -->
                            </div>
                            <!-- end col -->
                        </div>
                        {{ form_end(form) }}
                    {% endblock content %}
                    <div class="btn-group" style="float: left">
                        {#<div class="btn btn-default ">arSolicituds <span#}
                        {#class="badge">{{ arSolicituds.getTotalItemCount }}</span></div>#}
                        {#<div class="btn-group"#}
                        {#style="float: left;margin: 0px;padding-top: 0px">{{ knp_pagination_render(arSolicituds) }}</div>#}
                    </div>
                </div> <!-- container -->
            </div> <!-- content -->
        </div>
        {{ include('bloquesGenerales/pie.html.twig') }}
    </div>
{% endblock %}
