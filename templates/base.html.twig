<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        {% block metas %}
            <meta name="viewport" content="width=device-width, initial-scale=1.0">
            <meta name="description" content="local">
            <meta name="author" content="Alejandro Vera Carrasquilla">
        {% endblock %}
        <title>{% block title %}Oro{% if app.user is not null %} - {{ app.user.nombres }} {{ app.user.apellidos }} {% endif %}{% endblock %}</title>
        {% block stylesheets %}
            <!-- Custom box css -->
            <link href="{{ asset('local/plugins/custombox/css/custombox.min.css') }}" rel="stylesheet">
            <link href="{{ asset('local/assets/css/bootstrap.min.css') }}" rel="stylesheet" type="text/css" />
            <link href="{{ asset('local/assets/css/core.css') }}" rel="stylesheet" type="text/css" />
            <link href="{{ asset('local/assets/css/components.css') }}" rel="stylesheet" type="text/css" />
            <link href="{{ asset('local/assets/css/icons.css') }}" rel="stylesheet" type="text/css" />
            <link href="{{ asset('local/assets/css/pages.css') }}" rel="stylesheet" type="text/css" />
            <link href="{{ asset('local/assets/css/menu.css') }}" rel="stylesheet" type="text/css" />
            <link href="{{ asset('local/assets/css/responsive.css') }}" rel="stylesheet" type="text/css" />
            <link rel="stylesheet" href="{{ asset('local/plugins/switchery/switchery.min.css') }}">
            <link href="{{ asset('local/plugins/bootstrap-colorpicker/css/bootstrap-colorpicker.min.css') }}" rel="stylesheet" type="text/css" >
            <link href="{{ asset('local/assets/css/oro.css') }}" rel="stylesheet" type="text/css" />
            <link href="{{ asset('local/assets/css/jquery.dataTables.min.css') }}" rel="stylesheet" type="text/css" />
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('local/assets/images/favicon.ico') }}" />
        {% block javascripts %}
            <script src="{{ asset('local/assets/js/jquery.min.js') }}"></script>
            <script src="{{ asset('local/assets/js/modernizr.min.js') }}"></script>
            <script src="{{ asset('local/assets/js/jquery.dataTables.min.js') }}"></script>
            <script src="{{ asset('local/assets/js/oro.js') }}"></script>
        {% endblock %}
    </head>
    <body {% block bodyAtt %}{% endblock %} >


        {% block body %}

            {% block content %}

            {% endblock %}

        {% endblock %}


        {% block javascriptsBottom %}
            <script>
                var resizefunc = [];
            </script>
            <!-- jQuery  -->
            <script src="{{ asset('local/assets/js/jquery.min.js') }}"></script>
            <script src="{{ asset('local/assets/js/bootstrap.min.js') }}"></script>
            <script src="{{ asset('local/assets/js/detect.js') }}"></script>
            <script src="{{ asset('local/assets/js/fastclick.js') }}"></script>
            <script src="{{ asset('local/assets/js/jquery.blockUI.js') }}"></script>
            <script src="{{ asset('local/assets/js/waves.js') }}"></script>
            <script src="{{ asset('local/assets/js/jquery.slimscroll.js') }}"></script>
            <script src="{{ asset('local/assets/js/jquery.scrollTo.min.js') }}"></script>
            <script src="{{ asset('local/plugins/switchery/switchery.min.js') }}"></script>
            <script src="{{ asset('local/plugins/bootstrap-inputmask/bootstrap-inputmask.min.js') }}" type="text/javascript"></script>
            <script src="{{ asset('local/plugins/bootstrap-maxlength/bootstrap-maxlength.min.js') }}" type="text/javascript"></script>
            <script type="text/javascript" src="{{ asset('local/plugins/parsleyjs/parsley.min.js') }}"></script>
            <script src="{{ asset('local/plugins/bootstrap-colorpicker/js/bootstrap-colorpicker.min.js') }}"></script>

            <!-- Modal-Effect -->
            <script src="{{ asset('local/plugins/custombox/js/custombox.min.js') }}"></script>
            <script src="{{ asset('local/plugins/custombox/js/legacy.min.js') }}"></script>

            <!-- App js -->
            <script src="{{ asset('local/assets/js/jquery.core.js') }}"></script>
            <script src="{{ asset('local/assets/js/jquery.app.js') }}"></script>

            <script>
                $(document).ready(function(){
                    $('[data-toggle="tooltip"]').tooltip();
                });
            </script>

        {% endblock %}
    </body>
</html>
